{
  "swagger": "2.0",
  "info": {
    "title": "API Go com Arquitetura",
    "description": "Uma API REST completa em Go com suporte aos verbos HTTP",
    "version": "1.0",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "name": "API Support",
      "url": "http://www.swagger.io/support"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "localhost:8080",
  "basePath": "/api",
  "schemes": ["http"],
  "paths": {
    "/produtos": {
      "get": {
        "tags": ["produtos"],
        "summary": "Listar todos os produtos",
        "description": "Retorna uma lista de todos os produtos",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Produto"
              }
            }
          }
        }
      },
      "post": {
        "tags": ["produtos"],
        "summary": "Criar um novo produto",
        "description": "Cria um novo produto com os dados fornecidos",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "produto",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Produto"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": {
              "$ref": "#/definitions/Produto"
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/produtos/{id}": {
      "get": {
        "tags": ["produtos"],
        "summary": "Obter um produto específico",
        "description": "Retorna um produto pelo ID",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Produto"
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "put": {
        "tags": ["produtos"],
        "summary": "Atualizar um produto completo",
        "description": "Atualiza todos os campos de um produto existente",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          },
          {
            "name": "produto",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Produto"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Produto"
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "patch": {
        "tags": ["produtos"],
        "summary": "Atualizar parcialmente um produto",
        "description": "Atualiza apenas os campos fornecidos de um produto",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          },
          {
            "name": "produto",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Produto"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Produto"
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "delete": {
        "tags": ["produtos"],
        "summary": "Deletar um produto",
        "description": "Remove um produto do sistema",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/health": {
      "get": {
        "tags": ["health"],
        "summary": "Verificar saúde da API",
        "description": "Retorna o status da API",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "definitions": {
    "Produto": {
      "type": "object",
      "description": "Representa um produto da API",
      "properties": {
        "id": {
          "type": "integer",
          "example": 1
        },
        "nome": {
          "type": "string",
          "example": "Notebook"
        },
        "preco": {
          "type": "number",
          "example": 3500.00
        },
        "descricao": {
          "type": "string",
          "example": "Notebook de alta performance"
        }
      }
    }
  }
}
